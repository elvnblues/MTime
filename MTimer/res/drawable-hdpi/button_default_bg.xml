<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid android:color="#FF8916"/>
            <!-- 描边 -->
            <stroke
                android:width="1dp"
                android:color="#FF8916" />
            <!-- 圆角 -->
            <corners
                android:radius="5dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <solid android:color="#F2F2F2"/>
            <!-- 描边 -->
            <stroke
                android:width="1dp"
                android:color="#FF8916" />
            <!-- 圆角 -->
            <corners
                android:radius="5dp" />
        </shape>
    </item>

    <item>       
        <shape>
            <solid android:color="#F2F2F2"/>
            <!-- 描边 -->
            <stroke
                android:width="1dp"
                android:color="#D3D1CE" />
            <!-- 圆角 -->
            <corners
                android:radius="5dp" />
        </shape>
    </item>
</selector>